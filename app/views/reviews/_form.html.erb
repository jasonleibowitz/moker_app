<%= form_for([@coffee_shop, @review]) do |f| %>
<div class="small-6 small-centered columns survey-errors-wrap">
  <% if @review.errors.any? %>
  <h4>Please correct the following errors:</h4>
  <hr>
  <ul>
    <% @review.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </ul>
  <% end %>
</div>

<div class="row">
  <div class="big-space"></div>
</div>

<div class="row">

  <div class="small-4 small-centered columns survey-wrap">
    <h3>Quick Survey</h3>
    <hr>
    <%= f.label :outlet_rating, 'Were there enough outlets?' %>
    <%= f.radio_button :outlet_rating, true %>
    <%= f.label :outlet_rating, 'Yes' %>
    <%= f.radio_button :outlet_rating, false %>
    <%= f.label :outlet_rating, 'No' %>
    <hr>
    <div class="row">
      <div class="small-6 small-centered columns">
        <%= f.label :wifi_rating, 'Was the wifi fast?' %>
        <%= f.radio_button :wifi_rating, true %>
        <%= f.label :wifi_rating, 'Yes' %>
        <%= f.radio_button :wifi_rating, false %>
        <%= f.label :wifi_rating, 'No' %>
      </div>
      <hr>
    </div>
    <div class="row">
      <div class="small-10 small-centered columns">
       <%= f.label :workspace_rating, "Was there enough space to work at #{@coffee_shop.name}?" %>
       <%= f.radio_button :workspace_rating, true %>
       <%= f.label :workspace_rating, 'Yes' %>
       <%= f.radio_button :workspace_rating, false %>
       <%= f.label :workspace_rating, 'No' %>
     </div>
     <hr>
     <div class="row">
      <div class="small-12 small-centered columns">
        <%= f.label :coffee_rating, "Did you enjoy the coffee at #{@coffee_shop.name}?" %>
        <%= f.radio_button :coffee_rating, true %>
        <%= f.label :coffee_rating, 'Yes' %>
        <%= f.radio_button :coffee_rating, false %>
        <%= f.label :coffee_rating, 'No' %>
      </div>
      <hr>
      <div class="row">
        <div class="small-12 small-centered columns">
          <%= f.submit 'submit' %>
          <% end %>
          <div class="medium-space"></div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>








